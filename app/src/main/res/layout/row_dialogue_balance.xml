<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/tv_dialoguerow_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/holo_blue_dark"/>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="@android:color/holo_blue_dark"></View>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.17">
        <TextView
            android:id="@+id/tv_dialoguerow_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Price"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/holo_blue_dark"/>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="@android:color/holo_blue_dark"></View>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8">
        <EditText
            android:id="@+id/et_dialoguerow_availableCoins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Available Coins"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/holo_blue_dark"/>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="@android:color/holo_blue_dark"></View>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.17">
        <EditText
            android:id="@+id/et_dialoguerow_targetprice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Target Price"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/holo_blue_dark"/>
    </RelativeLayout>

</LinearLayout>